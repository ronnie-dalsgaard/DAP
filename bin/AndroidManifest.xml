<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rd.dap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/red_tape"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.BookmarkListFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".fragments.AudiobookGridFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".fragments.ControllerFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.FileBrowserActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.AudiobookActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.TrackActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.InputActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.NewAudiobookActivity"
            android:label="@string/app_name" />

        <service 
            android:name=".services.PlayerService"
            android:exported="true" />
        <service 
            android:name=".services.HeadSetReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>