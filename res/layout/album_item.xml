<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/album_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/album_item_edit"
        android:text="Album"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/album_item_edit"
        android:layout_width="@dimen/icon_width_tiny"
        android:layout_height="@dimen/icon_height_tiny"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/album_item_tv"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_edit" />

</RelativeLayout>