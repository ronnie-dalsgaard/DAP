<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mini_player_width"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/file_item_type_iv"
        android:layout_width="@dimen/file_type_width"
        android:layout_height="@dimen/file_type_height"
        android:layout_margin="@dimen/margin_small"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_view_as_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/file_type_height"
        android:layout_toLeftOf="@+id/file_item_cb"
        android:layout_toRightOf="@+id/file_item_type_iv"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/file_item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/file_item_path_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="absolute path"
            android:visibility="gone" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/file_item_cb"
        android:layout_width="@dimen/file_type_width"
        android:layout_height="@dimen/file_type_height"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_small"
        android:focusable="false" />

</RelativeLayout>