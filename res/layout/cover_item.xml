<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/cover_item_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_help" />

    <ImageView
        android:id="@+id/cover_item_edit"
        android:layout_width="@dimen/icon_width_tiny"
        android:layout_height="@dimen/icon_height_tiny"
        android:layout_alignTop="@+id/cover_item_iv"
        android:layout_toRightOf="@+id/cover_item_iv"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_edit" />

</RelativeLayout>