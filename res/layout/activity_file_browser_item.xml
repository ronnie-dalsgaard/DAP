<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    
    <ImageView
        android:id="@+id/file_browser_item_expand"
        android:layout_width="42dp"
        android:layout_height="42dp" 
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_next_item" />
    
    <ImageView 
        android:id="@+id/file_browser_item_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/file_browser_item_expand"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_view_as_list" />
    
    <TextView
        android:id="@+id/file_browser_item_name"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/file_browser_item_icon"
        android:gravity="center_vertical"
        android:text="@string/g_folder"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <LinearLayout
        android:id="@+id/file_browser_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/file_browser_item_expand" 
        android:layout_below="@+id/file_browser_item_expand" />

</RelativeLayout>
