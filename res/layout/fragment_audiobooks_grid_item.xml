<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="210dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/fragment_audiobooks_grid_item_iv"
        android:layout_width="@dimen/cover_width_big"
        android:layout_height="@dimen/cover_height_big"
        android:src="@drawable/ic_action_picture"
        android:background="@color/black" >
    </ImageView>

    <TextView
        android:id="@+id/fragment_audiobooks_grid_item_author_tv"
        android:layout_width="@dimen/cover_width_big"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textSize="10sp"
        android:maxLines="2"
        android:text="Album"
        android:background="@color/black" />
    
     <include layout="@layout/divider_horizontal" />
    
    <TextView
        android:id="@+id/fragment_audiobooks_grid_item_album_tv"
        android:layout_width="@dimen/cover_width_big"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:textSize="10sp"
        android:maxLines="4"
        android:text="Album"
        android:background="@color/black" />

</LinearLayout>