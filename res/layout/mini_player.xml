<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mini_player_width"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="rd.dap.MiniPlayer_old"
    android:background="@drawable/miniplayer_bg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/miniplayer_cover_iv"
            android:layout_width="@dimen/cover_width"
            android:layout_height="@dimen/cover_height"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_help" />

        <ImageButton
            android:id="@+id/miniplayer_play_btn"
            android:layout_width="@dimen/cover_width"
            android:layout_height="@dimen/cover_height"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_play_over_video"
            android:background="@color/transparent"
            android:text="@string/play" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/miniplayer_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_height"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/miniplayer_author_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/miniplayer_album_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/miniplayer_track_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/miniplayer_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/miniplayer_progress_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_progress" />
    </LinearLayout>

</LinearLayout>