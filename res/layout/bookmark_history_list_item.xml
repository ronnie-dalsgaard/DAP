<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cover_width_small"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/bookmark_history_list_item_function_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/cover_width_small"
        android:layout_weight="1"
        android:contentDescription="@string/content_description"
        android:layout_marginLeft="5dp"
        android:padding="4dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_play"/>
    
    <TextView 
        android:id="@+id/bookmark_history_list_item_progress"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:text="00 / 00:00:00"/>
    
    <TextView 
        android:id="@+id/bookmark_history_list_item_timestamp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="\@ 00:00 31/12"/>
    
</LinearLayout>
