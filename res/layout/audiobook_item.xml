<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audiobook_item_cover_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/audiobook_item_trash_iv"
        android:layout_width="@dimen/cover_width_medium"
        android:layout_height="@dimen/cover_height_medium"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="7dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_action_discard"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/audiobook_item_info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_height_medium"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/audiobook_item_trash_iv" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/audiobook_item_author_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_action_person" />

            <TextView
                android:id="@+id/audiobook_item_author_tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:text="Author" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/audiobook_item_album_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_action_labels" />

            <TextView
                android:id="@+id/audiobook_item_album_tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:maxLines="2"
                android:text="Album" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>