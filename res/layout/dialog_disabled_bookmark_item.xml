<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audiobook_item_cover_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:baselineAligned="false" >

    <LinearLayout
        android:id="@+id/audiobook_item_info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/audiobook_item_author_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_action_person" />

            <TextView
                android:id="@+id/audiobook_item_author_tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:text="Author" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/audiobook_item_album_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_action_labels" />

            <TextView
                android:id="@+id/audiobook_item_album_tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="Album" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/audiobook_item_track_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_action_node" />

            <TextView
                android:id="@+id/audiobook_item_track_tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="Track" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/audiobook_item_progress_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_action_time" />

            <TextView
                android:id="@+id/audiobook_item_progress_tv"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="Progress" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audiobook_item_trash_iv_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/audiobook_item_trash_iv"
            android:layout_width="@dimen/cover_width_medium"
            android:layout_height="@dimen/cover_height_medium"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="7dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_discard" />
    </LinearLayout>
</LinearLayout>