<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmark_layout"
    android:layout_width="@dimen/mini_player_width"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/bookmark_cover_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/bookmark_cover_iv"
            android:layout_width="@dimen/cover_width"
            android:layout_height="@dimen/cover_height"
            android:padding="2sp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_help" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bookmark_info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_height"
        android:layout_toRightOf="@+id/bookmark_cover_layout"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/bookmark_author_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:paddingTop="2dp"
            android:src="@drawable/ic_action_person" />

        <TextView
            android:id="@+id/bookmark_author_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bookmark_author_iv"
            android:text="Author" />

        <include
            android:id="@+id/bookmark_divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/bookmark_author_tv"
            layout="@layout/divider_horizontal" />

        <ImageView
            android:id="@+id/bookmark_album_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/bookmark_divider1"
            android:paddingTop="2dp"
            android:src="@drawable/ic_action_labels" />

        <TextView
            android:id="@+id/bookmark_album_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookmark_divider1"
            android:layout_toRightOf="@+id/bookmark_album_iv"
            android:text="Album" />

        <include
            android:id="@+id/bookmark_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/bookmark_album_tv"
            layout="@layout/divider_horizontal" />

        <ImageView
            android:id="@+id/bookmark_progress_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/bookmark_divider2"
            android:layout_toLeftOf="@+id/bookmark_progress_tv"
            android:paddingTop="2dp"
            android:src="@drawable/ic_action_time" />

        <TextView
            android:id="@+id/bookmark_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bookmark_divider2"
            android:layout_marginRight="@dimen/margin_big"
            android:text="@string/_progress" />

        <ImageView
            android:id="@+id/bookmark_track_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bookmark_divider2"
            android:paddingTop="2dp"
            android:src="@drawable/ic_action_node" />

        <TextView
            android:id="@+id/bookmark_track_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookmark_divider2"
            android:layout_toRightOf="@+id/bookmark_track_iv"
            android:text="Track" />
    </RelativeLayout>

</RelativeLayout>