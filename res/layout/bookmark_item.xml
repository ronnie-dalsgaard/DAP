<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookmark_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/bookmark_cover_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/bookmark_cover_iv"
            android:layout_width="@dimen/cover_width_medium"
            android:layout_height="@dimen/cover_height_medium"
            android:contentDescription="@string/content_description"
            android:padding="2sp"
            android:src="@drawable/ic_action_picture" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bookmark_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cover_height_medium"
        android:layout_toRightOf="@+id/bookmark_cover_layout"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/bookmark_track_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_node" />

        <TextView
            android:id="@+id/bookmark_track_tv"
            android:layout_width="56sp"
            android:layout_height="16dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/bookmark_track_iv"
            android:maxLines="1"
            android:text="0" />

        <ImageView
            android:id="@+id/bookmark_progress_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/bookmark_track_iv"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_time" />

        <TextView
            android:id="@+id/bookmark_progress_tv"
            android:layout_width="56sp"
            android:layout_height="16dp"
            android:layout_below="@+id/bookmark_track_tv"
            android:layout_toRightOf="@+id/bookmark_progress_iv"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/_progress" />
    </RelativeLayout>

</RelativeLayout>