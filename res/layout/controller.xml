<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:padding="2dp" >

    <ScrollView
        android:layout_width="@dimen/mini_player_width"
        android:layout_height="match_parent"
        android:layout_above="@+id/controller_buttons"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <fragment
                android:id="@+id/controller_fragment_audiobooks_basics"
                android:name="rd.dap.fragments.FragmentAudiobookBasics"
                android:layout_width="@dimen/mini_player_width"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_audiobook_basics" />

            <include
                android:id="@+id/controller_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/controller_fragment_audiobooks_basics"
                layout="@layout/horizontal_divider" />
            
            <fragment
                android:id="@+id/controller_track_fragment"
                android:name="rd.dap.fragments.FragmentTrack"
                android:layout_width="@dimen/mini_player_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/controller_divider_1"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_track" />

            <include 
                android:id="@+id/controller_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/controller_track_fragment"
                layout="@layout/horizontal_divider" />

            <fragment
                android:id="@+id/controller_seeker_fragment"
                android:name="rd.dap.fragments.FragmentSeeker"
                android:layout_width="@dimen/mini_player_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/controller_divider_2"
                android:layout_centerHorizontal="true"
                tools:layout="@layout/fragment_seeker" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/controller_buttons"
        android:layout_width="@dimen/mini_player_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/miniplayer_bg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/controller_upload"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_upload" />

        <ImageButton
            android:id="@+id/controller_play"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="2"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_play" />

        <ImageButton
            android:id="@+id/controller_download"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_weight="1"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_action_download" />
    </LinearLayout>

</RelativeLayout>