<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small" >

    <TextView
        android:id="@+id/details_item_track_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="00"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/details_item_track_pos_title_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/details_item_track_position"
        android:background="@drawable/vertical_divider"
        android:visibility="gone" />

    <TextView
        android:id="@+id/details_item_track_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/details_item_track_pos_title_divider"
        android:padding="@dimen/margin_small"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>