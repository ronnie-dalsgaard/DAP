<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controller_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <TextView
        android:id="@+id/controller_beta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BETA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/green" />

    <ScrollView
        android:id="@+id/controller_scroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/controller_beta" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookmarks:" />

            <HorizontalScrollView
                android:layout_width="@dimen/mini_player_width"
                android:layout_height="@dimen/cover_height_medium" >

                <LinearLayout
                    android:id="@+id/controller_bookmark_list"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/cover_height_medium"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>

            <include layout="@layout/divider_horizontal" />

            <include layout="@layout/fragment_audiobook_basics" />

            <include layout="@layout/divider_horizontal" />

            <include layout="@layout/fragment_track" />

            <include layout="@layout/divider_horizontal" />

            <include layout="@layout/fragment_seeker" />

            <include layout="@layout/divider_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracks:" />

            <LinearLayout
                android:id="@+id/controller_tracks_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <include layout="@layout/divider_horizontal" />
        </LinearLayout>
    </ScrollView>
    
    <fragment 
        android:name="rd.dap.activities.AudiobooksFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/controller_scroller"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#80808080"
        android:text="?android:attr/versionCode" />
    
</RelativeLayout>