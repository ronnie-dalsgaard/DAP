<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rd.dap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/red_tape"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".fragments.BookmarkListFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".fragments.AudiobookGridFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".fragments.ControllerFragment"
            android:label="@string/app_name" />
        <activity
            android:name=".FileBrowserActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".AudiobookActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".TrackActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".InputActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".NewAudiobookActivity"
            android:label="@string/app_name" />

        <service android:name=".PlayerService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ChangeAudiobookDialogActivity"
            android:label="@string/title_activity_change_audiobook_dialog"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        </activity>
    </application>

</manifest>